<form class="" action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="">Name</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">

  <label for="">Edit Landmarks</label>
  <% Landmark.all.each do |landmark| %>
    <label for=""><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
  <% end %>

  <label for="">Edit Titles</label>
  <% Title.all.each do |title| %>
    <label for=""><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>>
  <% end %>

  <label for="">Add Title</label>
  <input type="text" id="new_title" name="title[name]" value="">

  <label for="">Add Landmark</label>
  <input type="text" id="new_landmark" name="landmark[name]" value="">

  <input type="submit" name="" value="Edit Figure">
</form>
